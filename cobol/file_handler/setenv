#!/bin/bash

export DD_DATAFILE=$PWD/data/DATAFILE

export DD_KSDSFILE=$PWD/data/DATAF16IDX
export DD_RRDSFILE=$PWD/data/DATAF16REL
export DD_ESDSFILE=$PWD/data/DATAF16SEQ
export MT_INTRDR_DSNLIST="$DD_DATAFILE;$DD_KSDSFILE;$DD_RRDSFILE;$DD_ESDSFILE"


case $MT_COBOL in
COBOL_MF)
	export COBPATH=$COBPATH:$PWD:$MT_ROOT/$MT_COBOL
	;;
COBOL_IT)
	export COB_LIBRARY_PATH=$COB_LIBRARY_PATH:$PWD:$MT_ROOT/$MT_COBOL
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$PWD
	;;
*)
	echo "COB not set"
	;;
esac

export PATH=$PATH:$MT_ROOT/$MT_COBOL
